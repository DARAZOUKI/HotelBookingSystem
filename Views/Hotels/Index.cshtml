@model IEnumerable<HotelBookingSystem.Models.Hotel>

@{
    ViewData["Title"] = "Hotels";
}

<h2>Available Hotels</h2>

<!-- Table for hotels -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Rooms</th>
            <th>StarRating</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hotel in Model)
        {
            <tr>
                <td>@hotel.Name</td>
                <td>@hotel.Location</td>
                
                <td>
                    <a asp-controller="Rooms" asp-action="Index" asp-route-hotelId="@hotel.Id" class="btn btn-info">View Rooms</a>
                </td>
             
                <td>
                    <a asp-action="Edit" asp-route-id="@hotel.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@hotel.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this hotel?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Button to create a new hotel -->
<a asp-action="Create" class="btn btn-success">Add New Hotel</a>
