@model HotelBookingSystem.Models.Room

@{
    ViewData["Title"] = "Delete Room";
}

<h2>Delete Room</h2>

<h4>Are you sure you want to delete this room?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-3">Hotel Name</dt>
        <dd class="col-sm-9">@Model.Hotel.Name</dd>

        <dt class="col-sm-3">Room Type</dt>
        <dd class="col-sm-9">@Model.RoomType</dd>

        <dt class="col-sm-3">Price Per Night</dt>
        <dd class="col-sm-9">$@Model.PricePerNight</dd>

        <dt class="col-sm-3">Available</dt>
        <dd class="col-sm-9">@(Model.IsAvailable ? "Yes" : "No")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
